{
  "name": "assembox-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Assembox 低代码平台",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "bootstrap": "pnpm install",
    "clean": "pnpm -r exec rimraf dist node_modules",
    "clean:dist": "pnpm -r exec rimraf dist",
    "dev:storage": "pnpm --filter assembox-storage run start:dev",
    "build:storage": "pnpm --filter assembox-storage run build",
    "start:storage": "pnpm --filter assembox-storage run start",
    "build:services": "pnpm -r --filter './projects/*' run build",
    "lint:backend": "eslint 'projects/**/*.ts' --fix",
    "format": "prettier --write 'projects/**/*.{ts,json}'",
    "typecheck": "pnpm -r --filter './projects/*' exec tsc --noEmit",
    "ws:list": "pnpm list -r --depth -1"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "keywords": [
    "lowcode",
    "assembox",
    "nestjs",
    "monorepo"
  ],
  "author": "danielmlc",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "@typescript-eslint/parser": "^7.3.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}